<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %-5level - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.oneleo.test.automation.core" level="ERROR"/>
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="com.jayway.jsonpath" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.apache.kafka.common.config" level="ERROR"/>
    <logger name="io.netty.util.internal" level="ERROR"/>
    <logger name="com.datastax.driver.core" level="ERROR"/>
    <logger name="io.confluent" level="ERROR"/>
</configuration>